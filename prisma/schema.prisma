generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TypeTaux {
  ANNUEL
  MENSUEL
}

enum StatutSimulation {
  DRAFT
  VALIDATED
  DELETED
}

enum DocumentType {
  PDF
  EXCEL
}

model Operateur {
  id         String  @id @default(uuid())
  nom        String
  email      String  @unique
  motDePasse String
  actif      Boolean @default(true)

  simulations SimulationSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String  @id @default(uuid())
  nom       String
  prenom    String
  email     String?
  telephone String?

  results SimulationResult[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SimulationSession {
  id String @id @default(uuid())

  taux           Float
  typeTaux       TypeTaux
  dateTraitement DateTime

  operateurId String
  operateur   Operateur @relation(fields: [operateurId], references: [id])

  results SimulationResult[]

  createdAt DateTime @default(now())
}

model SimulationResult {
  id String @id @default(uuid())

  montant    Float
  duree      Int
  mensualite Float

  totalInterets  Float
  totalAssurance Float?

  statut StatutSimulation @default(DRAFT)

  clientId     String
  simulationId String

  client     Client            @relation(fields: [clientId], references: [id])
  simulation SimulationSession @relation(fields: [simulationId], references: [id])

  documents SimulationDocument[]

  createdAt DateTime @default(now())
}

model SimulationDocument {
  id String @id @default(uuid())

  nom     String
  type    DocumentType
  fichier Bytes

  resultId String
  result   SimulationResult @relation(fields: [resultId], references: [id])

  createdAt DateTime @default(now())
}
